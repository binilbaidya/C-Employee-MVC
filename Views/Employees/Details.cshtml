@model CRUDEmployeeMVC.Model.Employee

@{
    ViewBag.Title = "Details";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}

<div>
    <a href="@Url.Action("Index", "Employees")" class="btn btn-default pull-right" style="margin-top: 25px">Back to List</a>
</div>

<h2>Details</h2>

<div>
    <h4><b>Employee:</b> @Html.DisplayFor(model => model.FullName)</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Full Name")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FullName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Phone)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Phone)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Age)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Age)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Gender)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Gender)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.EmpDoc)
                </dt>

                <dd>
                    <a href="@Html.DisplayFor(model => model.EmpDoc)" download="" title="Download Employee's Document"><i class="fa fa-download"></i></a>
                </dd>
            </dl>
        </div>
        <div class="col-md-4">
            <img src="@Html.DisplayFor(model => model.ProfilePic)" height="100" alt="Employee's Profile Picture" />
        </div>
    </div>
</div>
<p>
    <a href="@Url.Action("Edit", "Employees", new { id = Model.ID })" class="btn btn-success">Edit</a>
    @if (Model.IsDeleted == false)
    {
        <a href="@Url.Action("Delete", "Employees", new { id = Model.ID })" class="btn btn-danger">Delete</a>
    }
</p>
